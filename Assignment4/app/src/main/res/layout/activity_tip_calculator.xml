<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_tip_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="51dp"
        android:text="Check amount:" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="21dp"
        android:text="Party size:" />

    <EditText
        android:id="@+id/checkAmountValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@+id/textView"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/partySizeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignEnd="@+id/checkAmountValue"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/buttonCompute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/partySizeValue"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/textView"
        android:text="COMPUTE TIP" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/buttonCompute"
        android:layout_marginTop="83dp"
        android:text="Tip:     15%" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="16dp"
        android:text="Total: 15%" />

    <EditText
        android:id="@+id/fifteenPercentTipValue"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toStartOf="@+id/partySizeValue"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fifteenPercentTipValue"
        android:layout_alignBottom="@+id/fifteenPercentTipValue"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/fifteenPercentTipValue"
        android:text="20%" />

    <EditText
        android:id="@+id/fifteenPercentTotalValue"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/fifteenPercentTipValue"
        android:layout_below="@+id/textView3"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toStartOf="@+id/twentyPercentTotalValue"
        android:text="20%" />

    <EditText
        android:id="@+id/twentyPercentTipValue"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/twentyPercentTotalValue"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/fifteenPercentTotalValue"
        android:layout_toEndOf="@+id/textView6"
        android:ems="10"
        android:inputType="number"
        android:singleLine="false" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/twentyPercentTipValue"
        android:layout_alignBottom="@+id/twentyPercentTipValue"
        android:layout_marginStart="34dp"
        android:layout_toEndOf="@+id/twentyPercentTipValue"
        android:text="25%" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignTop="@+id/textView7"
        android:text="25%" />

    <EditText
        android:id="@+id/twentyfivePercentTipValue"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/twentyfivePercentTotalValue"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:ems="10"
        android:inputType="number" />

</RelativeLayout>